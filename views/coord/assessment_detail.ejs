        function getResults(){
          hs.getAjax({
            url:'/coord/assessments/assessment_detail/studentMark',
            data:{
              id:<%= id %>
            },
            succFn:function(res){
              hs.text(hs.getId("marks"),res)
            }
          })
        }


        function save(self){
          hs.getAjax({
            url:'/coord/assessments/assessment_detail/saveMark',
            data:{
              username:self.getAttribute('username'),
              assignmentId:self.getAttribute('assignmentId'),
              mark :hs.getId(self.getAttribute('username')).value
            },
            succFn:function(){
              hs.toast("green", 2, "Data saved")
            }
