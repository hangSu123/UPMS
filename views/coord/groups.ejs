    <script>


getGroups();
      var btn_create = hs.getId('btn_create');


      var num_groups = hs.getId('num_groups');
      var amount = hs.getId('amount');
      var tutor = hs.getId('tutor');



      hs.click(btn_create,function(){
        hs.getAjax({
          url:'/coord/groups/createGroups',
          data:{
            'num_groups':num_groups.value,
            'amount':amount.value,
            'tutor':tutor.value
          },
          succFn:function(res){
            hs.toast('green',2,'Success!');
          }
        })
      });




      function getGroups(){
        hs.getAjax({
          url:'/coord/groups/getGroups',
          data:{
            user:'1'
          },
          succFn:function(res){
            hs.getId('group_details').innerHTML += res;
          }
        })
      }
    
