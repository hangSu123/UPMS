    <script>

      var announcement = hs.getId('announcement');
      hs.pageLoader('content');


      getAnnouncement();

      function sendAnnouncement(){
        hs.loading();

        hs.getAjax({
          url:'/coord/createAnnouncement',
          data:{
            userId:001,
            title:input[0].value,
            content:textarea[0].value,
            time:input[1].value
          },
          succFn:function(data){
            if (data == 2) {
              hs.toast("green",2,"Success");
              getAnnouncement();
              getCalandar();
              input[0].value = "";
              input[1].value = "";
              textarea[0].value = "";
            }else{
              hs.toast("red",2,"Please Check your internet");
            }

          }
        })
      }




      function getAnnouncement(){
        announcement.innerHTML="";
        hs.getAjax({
          url:'/coord/getAnnouncement',
          data:{
            userId:'1'
          },
          succFn:function(data){
            var temp = "";

              if (data === 0 || data == 1){
               temp = "Please Check your database";
              }else if(data.length=="0" ){
                temp = "Welcome to IFB398/IFB399 Capstone";
              }else{
                temp = data;
              }
             hs.text(announcement,temp);

          }
        })
      };

      getCalandar();

      function getCalandar(){
        hs.getAjax({
          url:'/coord/getCalandar',
          data:{
            userId:'1'
          },
          succFn:function(data){
            var temp = "";

              if (data === 0 || data == 1){
               temp = "Please Check your database";
              }else if(data.length=="0" ){
                temp = "Welcome to IFB398/IFB399 Capstone";
              }else{
                temp = JSON.parse(data);
              }
              dispalyCalandar(temp.events);
          }
        })
      };

      function showDetail(self){
         hs.getAjax({
          url:'/coord/getCalandar',
          data:{
            userId:001,
            Id:self.getAttribute("id")
          },
          succFn:function(data){
            if (data == 0 || data == 1) {
              hs.toast("red",2,"Please check your internet");
            }else{
              hs.text(hs.getId("calandarDeatil"),data);
            }

          }
        })
      }

      function dispalyCalandar(events){
        var settings = {};
        var element = hs.getId('calandar');
        element.innerHTML = "";
        hs.calandar(element, events, settings);
      }


