<script>
  console.log(localStorage.getItem("userId"));
  getTimeSlots();
  getMyTime();


  function getTimeSlots(){
    hs.getAjax({
      url:'/student/meeting/getTimeSlots',
      data:{
        userId:localStorage.getItem('userId')
      },
      succFn:function(res){
        hs.text(hs.getId('timeSlots'),res);
      }
    })
  }


  function getMyTime(){
        hs.getAjax({
          url:'/student/tutorMeeting/getTimeSlots/getMyTime',
          data:{
            userId:localStorage.getItem('userId')
          },
          succFn:function(res){
            hs.text(hs.getId('myTime'),res);
          }
        })
      }

  function registerTime(self){
    var meeting_id = self.getAttribute('id');
    hs.getAjax({
      url:'/student/tutorMeeting/getTimeSlots/addMeeting',
          data:{
            userId:localStorage.getItem('userId'),
            meeting_id:meeting_id
          },
          succFn:function(res){
            if(res == "already"){
              hs.toast("red",2,"Your group have already registed a meeting time");
            }else if(res == "noGroup"){
              hs.toast("red",2,"Your have not registed in any group yet");
            }else if(res == "succ"){
              hs.toast("green",2,"Registed");
              getMyTime();
            }
          }
        })
  }


</script>
