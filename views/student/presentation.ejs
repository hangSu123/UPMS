        var tutor = hs.getTagName('select');



        getTimeSlots();
        getMyTime();


        function getTimeSlots(){
          hs.getAjax({
            url:'/student/presentation/getTimeSlots',
            data:{
              userId:localStorage.getItem('userId')
            },
            succFn:function(res){
              var temp = JSON.parse(res);
              dispalyCalandar(temp.events);
            }
          })
        }
      
     



      function dispalyCalandar(events){
        var settings = {};
        var element = hs.getId('calandar');
        element.innerHTML = "";
        hs.calandar(element, events, settings);
      }



      function showDetail(self){
         hs.getAjax({
          url:'/student/presentation/getCalandar',
          data:{
            userId:localStorage.getItem('userId'),
            Id:self.getAttribute("id")
          },
          succFn:function(data){
            console.log(data)
            if (data == 0 || data == 1) {
              hs.toast("red",2,"Please check your network");
            }else{
              hs.text(hs.getId("calandarDeatil"),data);
            }
           
          }
        })
      }

      function addMeeting(self){
        hs.getAjax({
          url:'/student/presentation/getTimeSlots/addMeeting',
          data:{
            userId:localStorage.getItem('userId'),
            demo_meeting_id:self.getAttribute('id')
          },
          succFn:function(res){
            if(res == "already"){
              hs.toast("red",2,"Your group have already registed a presentation time");
            }else if(res == "noGroup"){
              hs.toast("red",2,"Your have not registed in any group yet");
            }else if(res == "succ"){
              hs.toast("green",2,"Registed");
              getMyTime();
            }
          }
        })
      }


      function getMyTime(){
        hs.getAjax({
          url:'/student/presentation/getTimeSlots/getMyTime',
          data:{
            userId:localStorage.getItem('userId')
          },
          succFn:function(res){
            hs.text(hs.getId('myTime'),res);
          }
        })
      }

     
